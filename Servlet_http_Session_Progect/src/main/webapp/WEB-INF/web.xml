<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <!-- login form Configration -->
  <welcome-file-list>
  <welcome-file>login-form.jsp</welcome-file>
  </welcome-file-list>
  
  
  <servlet>
  <servlet-name>Login</servlet-name>
  <servlet-class>com.jsp.Servlet_http_session.Controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>Login</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <!-- profil controller configration -->
  <servlet>
  <servlet-name>about</servlet-name>
  <servlet-class>com.jsp.Servlet_http_session.Controller.AboutController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>about</servlet-name>
  <url-pattern>/aboutus</url-pattern>
  </servlet-mapping>
  
  <!-- logout controller configration -->
  
  <servlet>
  <servlet-name>logout</servlet-name>
  <servlet-class>com.jsp.Servlet_http_session.Controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>logout</servlet-name>
  <url-pattern>/Logoutus</url-pattern>
  
  </servlet-mapping>
  
</web-app>
